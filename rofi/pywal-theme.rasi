* {
    font-family: "Iosevka Nerd Font";
    font-size: 18px;
}

window {
    transparency:                   "real";
    background-color:               @background;
    text-color:                    @foreground;
    border:                        2px;
    border-color:                  @selected;
    border-radius:                 10px;
    width:                         44%;
    location:                      center;
    anchor:                        center;
}

prompt {
    enabled:                       true;
    padding:                       4px 4px 7px 7px;
    background-color:              @background;
    text-color:                   @foreground;
    cursor:                      pointer;
}

textbox-prompt-colon {
    expand:                        false;
    str:                          "";
    background-color:              @background;
    text-color:                   @foreground;
    padding:                       4px 0px 0px 9px;
}

entry {
    background-color:              @background;
    text-color:                   @foreground;
    placeholder-color:            @foreground;
    expand:                       true;
    horizontal-align:             0;
    placeholder:                  "Search...";
    blink:                       true;
    border:                       0px;
    padding:                      4px 0px 0px 9px;
    cursor:                      text;
    enabled:                     true;
}

inputbar {
    children:                      [ prompt, entry ];
    background-color:              @background;
    text-color:                   @foreground;
    expand:                       false;
    margin:                       0px;
    padding:                      9px;
}

listview {
    background-color:              @background;
    padding:                       0px;
    columns:                       1;
    lines:                        7;
    spacing:                      4px;
    cycle:                        true;
    dynamic:                      true;
    layout:                       vertical;
}

mainbox {
    background-color:              @background;
    children:                      [ inputbar, listview ];
    spacing:                      13px;
    padding:                      13px;
}

element {
    background-color:              @background;
    text-color:                   @foreground;
    orientation:                   horizontal;
    border-radius:                4px;
    padding:                      4px;
    children:                     [ element-icon, element-text ];
}

element-icon {
    background-color:              inherit;
    text-color:                   inherit;
    horizontal-align:              0.5;
    vertical-align:                0.5;
    size:                         36px;
    border:                       0px;
}

element-text {
    background-color:              inherit;
    text-color:                   inherit;
    expand:                       true;
    horizontal-align:             0;
    vertical-align:               0.5;
    margin:                       2px 0px 2px 9px;
}

element selected {
    background-color:              @selected;
    text-color:                   @background;
    border:                       0px;
    border-radius:                8px;
}

element.active,
element.selected.active {
    background-color:              @active;
    text-color:                   @background;
    border-radius:                8px;
}

element.urgent,
element.selected.urgent {
    background-color:              @urgent;
    text-color:                   @background;
    border-radius:                8px;
} 