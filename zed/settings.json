      }
    },
    "model_parameters": []
  },
  "context_servers": {
    "mcp-server-context7": {
      "enabled": true,
      "settings": {
        "default_minimum_tokens": "10000"
      }
    }
  },
  "icon_theme": "Colored Zed Icons Theme Dark",
  "ui_font_family": "JetBrains Mono",
  "buffer_font_family": "JetBrains Mono",
  "base_keymap": "VSCode",
  "theme": {
    "mode": "dark",
    "light": "Ayu Light",
    "dark": "Ayu Dark"
