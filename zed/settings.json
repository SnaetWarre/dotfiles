  "agent_ui_font_size": 20.0,
  "ui_font_weight": 600.0,
  "ui_font_size": 18.0,
  "buffer_line_height": "standard",
  "buffer_font_weight": 600.0,
  "buffer_font_size": 20.0,
  "session": {
    "trust_all_worktrees": true
  },
  "show_edit_predictions": false,
  "bottom_dock_layout": "contained",
  "tabs": {
    "git_status": true,
    "file_icons": true
