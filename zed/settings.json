// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "show_edit_predictions": false,
  "bottom_dock_layout": "contained",
  "tabs": {
    "git_status": true,
    "file_icons": true
  },
  "title_bar": {
    "show_menus": false,
    "show_branch_icon": true
  },
  "prettier": {
    "allowed": true
  },
  "minimap": {
    "thumb": "hover",
    "show": "auto"
  },
  "relative_line_numbers": false,
  "cursor_shape": "block",
  "agent_buffer_font_size": 12.0,
  "auto_update_extensions": {
    "*": true
  },
  "edit_predictions": {
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null,
      "enterprise_uri": null
    },
    "enabled_in_text_threads": false
  },
  "vim_mode": true,
  "agent": {
    "play_sound_when_agent_done": false,
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "model_parameters": [],
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-5"
    }
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "context_servers": {
    "mcp-server-context7": {
      "source": "extension",
      "enabled": true,
      "settings": {
        "default_minimum_tokens": "10000"
      }
    }
  },
  "icon_theme": "Material Icon Theme",
  "ui_font_size": 23.0,
  "ui_font_family": "JetBrains Mono",
  "ui_font_weight": 500.0,
  "buffer_font_size": 20.0,
  "buffer_font_weight": 580.0,
  "agent_ui_font_size": 25.0,
  "buffer_font_family": "JetBrains Mono",
  "base_keymap": "Cursor",
  "theme": {
    "mode": "dark",
    "light": "Ayu Dark",
    "dark": "Ayu Dark"
  },
  "autosave": {
    "after_delay": { "milliseconds": 500 }
  },
  "collaboration_panel": {
    "button": false,
    "dock": "left"
  },
  "git_panel": {
    "button": true,
    "dock": "left"
  },
  "outline_panel": {
    "dock": "right",
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "chat_panel": {
    "button": "never",
    "dock": "right"
  },
  "terminal": {
    "max_scroll_history_lines": 10032,
    "default_height": 300.0,
    "copy_on_select": true,
    "button": true
  },
  "debugger": {
    "button": false
  }
}
