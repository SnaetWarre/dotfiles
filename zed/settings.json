  "title_bar": {
    "show_menus": false,
    "show_branch_icon": true
  },
  "prettier": {
    "allowed": true
  },
  "minimap": {
    "thumb": "hover",
    "show": "auto"
  },
  "relative_line_numbers": "disabled",
  "cursor_shape": "block",
  "agent_buffer_font_size": 20.0,
  "auto_update_extensions": {
    "*": true
  },
  "edit_predictions": {
    "provider": "copilot",
    "codestral": {
      "max_tokens": 150
    },
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null,
      "enterprise_uri": null
    },
    "enabled_in_text_threads": false
  },
  "vim_mode": false,
  "agent": {
    "notify_when_agent_waiting": "all_screens",
