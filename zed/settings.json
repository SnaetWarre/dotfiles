  "terminal": {
    "max_scroll_history_lines": 10032,
    "default_height": 300.0,
    "copy_on_select": true,
    "button": true
  },
  "debugger": {
    "button": false
  },
  "languages": {
    "Python": {
      "language_servers": [
        "ty"
      ]
    }
  }
