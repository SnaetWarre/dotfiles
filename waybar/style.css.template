/* === Base Waybar Styling ================================================= */

waybar * {
  border: 4px;
  border-radius: 4px;
  min-height: 0;
  font-family: "JetBrainsMono Nerd Font", "JetBrainsMonoNL Nerd Font Propo", "JetBrainsMono";
  font-size: 16px;
}

#waybar {
  background-color: rgba($color0_rgb, 0.95);
  border-radius: 2px;
  opacity: 0.95;
}

window#waybar {
  background: rgba($color0_rgb, 0.95);
  transition-property: background-color;
  transition-duration: 0.5s;
  color: $color7;
  border: 3px solid $color4;
  border-left: 3px solid $color6;
  border-right: 3px solid $color6;
}

/* === Workspaces ========================================================== */

#workspaces {
  background-color: transparent;
  padding-left: 40px;
}

#workspaces button {
  all: initial;
  min-width: 0;
  box-shadow: inherit;
  padding: 6px 6px;
  margin: 6px 3px;
  border-radius: 4px;
  background-color: rgba($color0_rgb, 0.8);
  color: $color6;
}

#workspaces button.active {
  color: $color3;
  background-color: $color6;
}

#workspaces button:hover {
  color: rgba($color0_rgb, 1);
  background-color: $color6;
}

/* === Default Module Container Styling ==================================== */

#custom-microphone,
#bluetooth,
#custom-bluetooth,
#custom-brightness,
#custom-volume,
#custom-battery,
#custom-power,
#custom-asus-profile,
#custom-screenrecording-indicator,
#network,
#battery,
#pulseaudio,
#backlight,
#clock,
#tray {
  padding: 6px 12px;
  margin: 6px 6px;
  background-color: rgba($color0_rgb, 0.85);
  border: 2px solid $color4;
  border-radius: 2px;
}

/* === Audio ============================================================== */

#pulseaudio.muted {
  background-color: $color5;
  color: rgba($color0_rgb, 1);
}

/* === Bluetooth =========================================================== */

#bluetooth.disabled {
  color: $color3;
}

#custom-bluetooth {
  color: $color6;
  transition: color 0.2s ease-in-out;
}

/* === Network ============================================================= */

#network.disconnected {
  background-color: $color1;
  color: rgba($color0_rgb, 1);
}

/* === Clock =============================================================== */

#clock {
  font-weight: bold;
  font-size: 18px;
  color: $color3;
}

/* === Asus Profile ======================================================== */

#custom-asus-profile {
  font-weight: bold;
  font-size: 18px;
  color: $color3;
}

/* === Screen Recording =================================================== */

#custom-screenrecording-indicator {
  padding: 6px 12px;
  margin: 6px 6px;
  border-radius: 2px;
  font-weight: normal;
  min-width: 0;
}

#custom-screenrecording-indicator.recording {
  background-color: rgba($color1_rgb, 0.3);
  color: $color1;
  border: 2px solid $color1;
}

#custom-screenrecording-indicator.idle {
  color: $color7;
  background-color: rgba($color0_rgb, 0.85);
  border: 2px solid $color4;
}

/* === Battery ============================================================= */

#custom-battery {
  border-radius: 2px;
  font-weight: normal;
}

/* ğŸ”´ Critical */
#custom-battery .battery-critical {
  background-color: $color1;
  color: white;
  padding: 2px 6px;
  border-radius: 6px;
  font-weight: bold;
}

/* ğŸŸ  Warning */
#custom-battery .battery-warning {
  background-color: $color3;
  color: rgba($color0_rgb, 1);
  padding: 2px 6px;
  border-radius: 6px;
}

/* ğŸŸ¢ Normal */
#custom-battery .battery-normal {
  color: $color7;
}

/* === Brightness ========================================================== */

#backlight {
  background-color: rgba($color0_rgb, 0.85);
}

/* === Tray ================================================================ */

#tray {
  padding: 4px 8px;
  background-color: rgba($color0_rgb, 0.85);
}

/* === Custom Workspace Labels ============================================= */

#custom-work-left,
#custom-work-right {
  padding: 6px 6px;
  margin: 6px 3px;
}

#custom-workspace-1,
#custom-workspace-2,
#custom-workspace-3,
#custom-workspace-4 {
  font-size: 18px;
  font-weight: bold;
}

#custom-workspace-1:hover,
#custom-workspace-2:hover,
#custom-workspace-3:hover,
#custom-workspace-4:hover {
  color: $color3;
  transition: all 0.2s ease-in-out;
}

/* === Hover Effects ======================================================= */
/* Unified look for all interactive modules                                */

#custom-microphone:hover,
#custom-volume:hover,
#pulseaudio:hover,
#network:hover,
#bluetooth:hover,
#custom-bluetooth:hover,
#custom-power:hover,
#custom-asus-profile:hover,
#custom-battery:hover,
#custom-screenrecording-indicator:hover,
#battery:hover,
#backlight:hover,
#custom-brightness:hover,
#clock:hover,
#tray:hover {
  background-color: rgba($color8_rgb, 0.8);
  border: 2px solid $color6;
  color: $color6;
  transition: all 0.2s ease-in-out;
}

/* === Tooltips ============================================================ */

tooltip {
  color: $color6;
  background-color: rgba($color0_rgb, 0.95);
  border: 1px solid $color6;
  font-weight: bold;
}

tooltip label {
  color: $color7;
}
