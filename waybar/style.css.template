/* === Base Waybar Styling ================================================= */

* {
  border: none;
  border-radius: 0;
  min-height: 0;
  font-family: "JetBrainsMono Nerd Font", "JetBrainsMonoNL Nerd Font Propo", "JetBrainsMono";
  font-size: 15px;
  font-weight: normal;
}

window#waybar {
  background: rgba($color0_rgb, 0.85);
  border-radius: 8px;
  color: $color7;
  border: none;
  margin-top: 4px;
  margin-bottom: 4px;
}

/* === Separator =========================================================== */

#custom-separator {
  color: $color8;
  background: transparent;
  padding: 0 4px;
  margin: 0;
  font-size: 14px;
}

/* === Workspaces ========================================================== */

#workspaces {
  background: transparent;
  padding: 0;
  margin: 0;
}

#workspaces button {
  background: transparent;
  color: $color8;
  padding: 0 8px;
  margin: 0;
  border: none;
  border-bottom: 2px solid transparent;
  border-radius: 0;
  font-size: 16px;
  font-weight: normal;
  transition: all 0.2s ease-in-out;
}

#workspaces button.active {
  background: transparent;
  color: $color7;
  border-bottom: 2px solid $color7;
  font-weight: bold;
}

#workspaces button:hover {
  background: transparent;
  color: $color7;
}

/* === All Modules - Clean Minimal Styling ================================= */

#clock,
#network,
#custom-power,
#custom-system-stats,
#custom-battery,
#custom-volume,
#custom-brightness,
#custom-asus-profile,
#custom-screenrecording-indicator {
  background: transparent;
  color: $color7;
  padding: 0 8px;
  margin: 0;
  border: none;
  border-radius: 0;
}

/* === Clock =============================================================== */

#clock {
  color: $color5;
  font-weight: 500;
}

/* === Power =============================================================== */

#custom-power {
  color: $color1;
  font-size: 16px;
}

#custom-power:hover {
  color: $color1;
  transition: color 0.2s ease-in-out;
}

/* === Network ============================================================= */

#network {
  color: $color4;
}

#network.disconnected {
  color: $color1;
}

/* === System Stats ======================================================== */

#custom-system-stats {
  color: $color6;
  font-size: 14px;
}

/* === Battery ============================================================= */

#custom-battery {
  color: $color3;
}

/* === Volume ============================================================== */

#custom-volume {
  color: $color5;
}

/* === Brightness ========================================================== */

#custom-brightness {
  color: $color6;
}

/* === Asus Profile ======================================================== */

#custom-asus-profile {
  color: $color2;
  font-weight: 500;
  padding: 0 12px;
}

/* === Screen Recording ==================================================== */

#custom-screenrecording-indicator {
  color: $color4;
  padding: 0 8px;
}

#custom-screenrecording-indicator.recording {
  color: $color1;
  font-weight: bold;
}

/* === Hover Effects ======================================================= */

#clock:hover,
#network:hover,
#custom-battery:hover,
#custom-volume:hover,
#custom-brightness:hover,
#custom-asus-profile:hover {
  color: $color7;
  transition: color 0.2s ease-in-out;
}

/* === Tooltips ============================================================ */

tooltip {
  background: rgba($color0_rgb, 0.95);
  border: 1px solid $color8;
  border-radius: 4px;
  color: $color7;
  padding: 8px;
}

tooltip label {
  color: $color7;
}
